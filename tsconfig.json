{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ES6",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules/", "dist/"]
}
